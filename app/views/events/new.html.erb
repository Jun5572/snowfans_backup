<div class="event-form-wrapper">
	<%= form_for @event, class: "ui large form event-form-box" do |f| %>
		<div class="field">
			<%= f.label :title, "タイトル", class: "form-label" %>
			<%= f.text_field :title, placeholder: "例：丸沼高原に行きまーす！" %>
		</div>
		<div class="field new">
			<%= f.label :description, "詳細", class: "form-label" %>
			<%= f.text_area :description, class: "new-event-description", placeholder: "例：#{@placeholder_text}" %>
		</div>
		<div class="field">
			<%= f.label :date, "日程", class: "form-label" %>
			<label class="date-custom">
				<span class="button select-date-style box-shadow"><p>日程を選択</p></span>
				<%= f.date_field :date, value: Date.today, min: Date.today, max: "9999/12/31" %>
			</label>
		</div>
		<div class="field">
			<%= f.label :area, "ゲレンデがあるエリア", class: "form-label" %>
			<%= f.collection_select(:area_id, Area.where.not(code: 99), :id, :name, prompt: "選択してください", class: "box-shadow") %>
		</div>
		<%= f.submit("投稿", class: "button event-submit-style box-shadow") %>
	<% end %>
	<img class="snowman" src="/images/snowman2.png">
</div>